<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/add_attention_button"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="@drawable/btn_ok_bg">

    <RelativeLayout
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">

        <ImageView
            android:id="@+id/add_attentionImage"
            android:src="@drawable/add_attention2x"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/add_attentionText"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="添加关注方案"
            android:textColor="#FFFFFF"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/add_attentionImage"
            android:layout_marginLeft="10dp" />
    </RelativeLayout>

</RelativeLayout>
