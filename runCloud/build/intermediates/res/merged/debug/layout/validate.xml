<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/validate_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/b1"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/b2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/p3"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/p4"/>

        </LinearLayout>
        <RelativeLayout
            android:id="@+id/view_validate_username"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/b2"
            android:layout_width="245dp"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:background="#1e3666"
            android:layout_marginTop="55dp"
            android:layout_marginBottom="3dp"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/land_user_2x"
                android:layout_marginLeft="5dp" />

            <EditText
                android:id="@+id/validate_username"
                android:layout_width="200dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:background="@drawable/background_edittext_validate_chat"
                android:inputType="text"
                android:paddingEnd="5dp"
                android:paddingLeft="5dp"
                android:paddingStart="5dp"
                android:singleLine="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/view_validate_password"
            android:layout_below="@id/view_validate_username"
            android:layout_marginBottom="3dp"
            android:layout_centerHorizontal="true"
            android:layout_width="245dp"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:background="#1e3666"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/land_password_2x"
                android:layout_marginLeft="5dp" />

            <EditText
                android:layout_width="200dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:id="@+id/validate_password"
                android:password="true"
                android:background="@drawable/background_edittext_validate_chat"
                android:inputType="text"
                android:paddingEnd="5dp"
                android:paddingLeft="5dp"
                android:paddingStart="5dp"
                android:singleLine="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/view_validate_checkview"
            android:layout_below="@id/view_validate_password"
            android:layout_marginBottom="5dp"
            android:layout_centerHorizontal="true"
            android:layout_width="245dp"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:background="#1e3666"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/land_validate_2x"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp" />

            <com.example.runcloud.util.CheckView
                android:id="@+id/checkView"
                android:layout_width="92dp"
                android:layout_height="35dp"
                android:scaleType="centerInside"
                android:scaleX="0.9"
                android:scaleY="0.9"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"></com.example.runcloud.util.CheckView>

            <EditText
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:id="@+id/validate_validate"
                android:layout_centerVertical="true"
                android:background="@drawable/background_edittext_validate_chat"
                android:inputType="text"
                android:paddingEnd="5dp"
                android:paddingLeft="5dp"
                android:paddingStart="5dp"
                android:singleLine="true"
                android:layout_marginRight="105dp"
                android:layout_alignParentRight="true" />

        </RelativeLayout>




        <RelativeLayout
            android:id="@+id/view_validate_bottom"
            android:layout_below="@id/view_validate_checkview"
            android:layout_width="245dp"
            android:layout_height="35dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="25dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_height="30dp"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp">

                <CheckBox
                    android:id="@+id/remember_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-10dp"
                    android:layout_alignParentBottom="true"
                    android:scaleX="0.5"
                    android:scaleY="0.5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="-10dp"
                    android:layout_toRightOf="@id/remember_password"
                    android:text="记住密码"
                    android:textColor="#ffffff" />
            </LinearLayout>

            <TextView
                android:id="@+id/set_ip"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:text="配置服务器IP"
                android:clickable="true"
                android:focusable="true"
                android:textColor="#ffffff" />
        </RelativeLayout>






        <RelativeLayout
            android:id="@+id/validate_footer"
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom">

            <Button
                android:id="@+id/validate_hit"
                android:background="@drawable/main_btn_ok_bg"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="点击进入"
                android:textSize="15sp"
                android:textColor="#FFFFFF"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp" />

            <TextView
                android:id="@+id/forget_password"
                android:layout_below="@id/validate_hit"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:text="忘记密码?"
                android:textSize="12sp" />

            <ImageView
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:layout_marginBottom="6dp"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:src="@drawable/runlogo_2" />

        </RelativeLayout>


    </RelativeLayout>




</LinearLayout>